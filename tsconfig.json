{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "lib": [
      "DOM"
    ],
    "paths": {
      "*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"]
}
